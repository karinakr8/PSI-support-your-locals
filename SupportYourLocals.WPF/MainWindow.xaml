<Window x:Class="SupportYourLocals.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupportYourLocals.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">

    <Border Padding="0">
        <StackPanel>
            
            <Grid Background="#FF7CFDFD" Height="30" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Search" HorizontalAlignment="Left" FontSize="20" FontFamily="Segoe UI Black" Margin="2,0,0,0" VerticalAlignment="Center"/>
                <Button Grid.Column="2" Background="Transparent" Content="?" BorderThickness="0" FontSize="20" FontFamily="Segoe UI Black" VerticalAlignment="Center" HorizontalAlignment="Right" />

            </Grid>
            <StackPanel>
                <TextBox Text="Phrase"   HorizontalAlignment="Center" Margin="0,20,0,0" BorderThickness="0 0 0 2" BorderBrush="#FFBBB1B1" Foreground="#FFC7C7C7" Background="{x:Null}" FontSize="20" TextAlignment="Center" MinWidth="200" MinHeight="30"/>
            </StackPanel>

            <Grid Margin="0 0 0 20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                

                    <ComboBox Grid.Column="0" Margin="0 20 5 0" BorderThickness="0 0 0 2"/>
                <TextBox Grid.Column="1" Text="Adress"   HorizontalAlignment="Center" Margin="5,20,0,0" BorderThickness="0 0 0 2" BorderBrush="#FFBBB1B1" Foreground="#FFC7C7C7" Background="{x:Null}" FontSize="20" TextAlignment="Center" MinWidth="200" MinHeight="30"/>

            </Grid>
            <StackPanel Height="Auto">
                
            </StackPanel>
            <Grid Background="#FF7CFDFD" Height="40" VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Search" HorizontalAlignment="Left" FontSize="20" FontFamily="Segoe UI Black" Margin="2,0,0,0" VerticalAlignment="Center"/>
                <Button Grid.Column="2" Background="Transparent" Content="?" BorderThickness="0" FontSize="20" FontFamily="Segoe UI Black" VerticalAlignment="Center" HorizontalAlignment="Right" />

            </Grid>
            <DockPanel>
                <Frame DockPanel.Dock="Bottom">
                    
                </Frame>
            </DockPanel>

        </StackPanel>
    </Border>
</Window>
