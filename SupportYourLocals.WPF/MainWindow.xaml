<Window x:Class="SupportYourLocals.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SupportYourLocals.WPF"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MainWindow" Height="530" Width="800">
    <TabControl>
        <TabItem Header="Search">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Header with help button and title of the window-->
                <Grid Grid.ColumnSpan="2" Background="#2EB875">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="81*"/>
                        <ColumnDefinition Width="707*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1" Margin="0,0,0,0.4" >
                        <Button Width="25" Height="25" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White">
                            <materialDesign:PackIcon Kind="Account"/>
                        </Button>

                        <Button Width="25" Height="25" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White">
                            <materialDesign:PackIcon Kind="QuestionMark"/>
                        </Button>


                    </StackPanel>
                    <Label Content="Search local sellers" FontFamily="Segoe UI Black" FontSize="16" Foreground="White" Grid.ColumnSpan="2" Margin="0,0,0,0.4"/>
                </Grid>
                <!-- User input for the search-->
                <Grid Grid.Row="1" >
                    <Grid HorizontalAlignment="Left" Margin="0,0,0,-0.4" Width="300" >
                        <Label Content="Search phrase" HorizontalContentAlignment="Center" VerticalAlignment="Top" Margin="0 40 0 0" FontFamily="Yu Gothic UI Semibold" FontSize="16" Width="160"/>
                        <TextBox  HorizontalContentAlignment="Center" Margin="0 75 0 0" Height="23" TextWrapping="Wrap" materialDesign:HintAssist.Hint="Strawberries" materialDesign:HintAssist.IsFloating="True" VerticalAlignment="Top" Width="160" />

                        <Label Content="City" HorizontalContentAlignment="Center" VerticalAlignment="Top" Margin="0 120 0 0" FontFamily="Yu Gothic UI Semibold" FontSize="16" Width="160"/>
                        <TextBox HorizontalContentAlignment="Center" Margin="0 155 0 0" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" />


                        <Label Content="Adress" HorizontalContentAlignment="Center" Margin="0 190 0 0" VerticalAlignment="Top" FontFamily="Yu Gothic UI Semibold" FontSize="16" Width="160"/>

                        <TextBox HorizontalContentAlignment="Center" Margin="0 225 0 0" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" />

                        <Label Content="Radius from adress location (km)" HorizontalContentAlignment="Center" Margin="0 270 0 0" VerticalAlignment="Top"  FontFamily="Yu Gothic UI Semibold" FontSize="16"/>

                        <Slider  VerticalAlignment="Top" HorizontalContentAlignment="Center" Margin="0 305 0 0" Height="22" Width="160" TickFrequency="10" Value="1" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" SmallChange="1" LargeChange="1"/>
                        <Button Content="Find" HorizontalContentAlignment="Center" Margin="0 360 0 0" VerticalAlignment="Top" Width="160" FontFamily="Yu Gothic UI Semibold" FontSize="16" Foreground="White" Background="#66ffb5" BorderBrush="{x:Null}">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Content="Add a local seller"  HorizontalContentAlignment="Center" Margin="0 400 0 0" VerticalAlignment="Top" Width="160" Background="Transparent" BorderBrush="{x:Null}" Foreground="#808080"/>



                    </Grid>


                </Grid>


                <!-- Place for a map-->
                <Grid Grid.Column="2" Grid.Row="2">

                    
                    
                </Grid>



            </Grid>
        </TabItem>

        <TabItem Header="Market">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Header with help button and title of the window-->
                <Grid Grid.ColumnSpan="2" Background="#2EB875">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                        <Button Width="25" Height="25" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White">
                            <materialDesign:PackIcon Kind="Account"/>
                        </Button>

                        <Button Width="25" Height="25" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White">
                            <materialDesign:PackIcon Kind="QuestionMark"/>
                        </Button>

                    </StackPanel>
                    <Label Content="Find marketplaces near you" FontFamily="Segoe UI Black" FontSize="16" Foreground="White"/>
                </Grid>
                <!-- User input for the search-->
                <Grid Grid.Row="1" >
                    <Grid >
                        <Label Content="City" HorizontalContentAlignment="Center" VerticalAlignment="Top" Margin="0 40 0 0" FontFamily="Yu Gothic UI Semibold" FontSize="16" Width="160"/>
                        <TextBox HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" materialDesign:HintAssist.Hint="Strawberries" materialDesign:HintAssist.IsFloating="True" VerticalAlignment="Top" Width="160" Margin="0 75 0 0" />

                        <Label Content="Marketplace" HorizontalContentAlignment="Center" VerticalAlignment="Top" Margin="0 130 0 0" FontFamily="Yu Gothic UI Semibold" FontSize="16" Width="160"/>
                        <ComboBox HorizontalAlignment="Center" Height="23"  VerticalAlignment="Top" Width="160" Margin="0 165 0 0"/>
                        <Button Content="Find" HorizontalAlignment="Center" Margin="0 325 0 0" VerticalAlignment="Top" Width="160" FontFamily="Yu Gothic UI Semibold" FontSize="16" Foreground="White" Background="#66ffb5" BorderBrush="{x:Null}">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Label Content="Type of goods" HorizontalContentAlignment="Center" VerticalAlignment="Top" Margin="0 225 0 0" FontFamily="Yu Gothic UI Semibold" FontSize="16" Width="160"/>
                        <ComboBox HorizontalAlignment="Center" Margin="0 260 0 0" VerticalAlignment="Top" Width="160"/>
                        <Label HorizontalAlignment="Center" HorizontalContentAlignment="Center" Content="Or" Margin=" 0 195 0 0" VerticalAlignment="Top" Foreground="#C0C0C0" Width="160"/>

                        <!--Button for adding, updating marketplaces-->
                        <Button Content="Update marketplaces" HorizontalAlignment="Center" Margin="0 370 0 0" VerticalAlignment="Top" Width="160" Background="Transparent" BorderBrush="{x:Null}" Foreground="#808080"/>


                    </Grid>


                </Grid>


                <!-- Place for a map-->
                <Grid Grid.Column="1" Margin="0,30,0,0" Grid.RowSpan="2"/>

            </Grid>
        </TabItem>


        <TabItem Header="Login">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Header with help button and title of the window-->
                <Grid Grid.ColumnSpan="2" Background="#2EB875">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                        <Button Width="25" Height="25" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White">
                            <materialDesign:PackIcon Kind="Account"/>
                        </Button>

                        <Button Width="25" Height="25" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White">
                            <materialDesign:PackIcon Kind="QuestionMark"/>
                        </Button>

                    </StackPanel>
                    <Label Content="Search local sellers" FontFamily="Segoe UI Black" FontSize="16" Foreground="White"/>
                </Grid>
                <!-- User input for the search-->
                <Grid Grid.Row="1" >
                    <Grid >
                        <Grid HorizontalAlignment="Left" Height="100" Margin="589,162,0,0" VerticalAlignment="Top" Width="100"/>


                    </Grid>


                </Grid>


                <!-- Place for a map-->
                <Grid Grid.Column="2" Grid.Row="2">
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="260"  Width="400">
                        <Button Content="Find" HorizontalAlignment="Center" Margin="0 140 0 0" VerticalAlignment="Top" Width="160" FontFamily="Yu Gothic UI Semibold" FontSize="16" Foreground="White" Background="#66ffb5" BorderBrush="{x:Null}">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Label Content="Password" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 70 0 0" FontFamily="Yu Gothic UI Semibold" FontSize="16"/>
                        <Label Content="Username" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 10 0 0 " FontFamily="Yu Gothic UI Semibold" FontSize="16"/>
                        <TextBox HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" materialDesign:HintAssist.Hint="Strawberries" materialDesign:HintAssist.IsFloating="True" VerticalAlignment="Top" Width="160" Margin="120,40,120,0" />
                        <PasswordBox HorizontalAlignment="Center" Margin="120,100,120,0" VerticalAlignment="Top" Width="160"/>
                        <Button Content="Not a user? Register now"  HorizontalAlignment="Center" Margin="0 180 0 0" VerticalAlignment="Top" Width="160" Background="Transparent" BorderBrush="{x:Null}" Foreground="#808080"/>

                    </Grid>

                </Grid>



            </Grid>
        </TabItem>
    </TabControl>
</Window>


