<Application x:Class="SupportYourLocals.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SupportYourLocals.WPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--A Style that sets Label's "Search local sellers" Font with an x:Key : Style="{StaticResource FontSetter1}"-->
        <Style
           TargetType="Label"
           x:Key="FontSetter1">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI Black"/>
        </Style>

        <!--A Style that sets Label's Font with an x:Key : Style="{StaticResource FontSetter2}"-->
        <Style
           TargetType="Label"
           x:Key="FontSetter2">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Yu Gothic UI Semibold"/>
        </Style>
        
        
    </Application.Resources>
</Application>
